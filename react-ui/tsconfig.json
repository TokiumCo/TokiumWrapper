{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "module": "ES6",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@wrapper": ["src/wrapper/*"]
    }
  },
  "include": ["src/wrapper", "./src/assets", "./src/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}